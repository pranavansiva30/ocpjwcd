<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>ParameterTestServlet</servlet-name>
        <servlet-class>ParameterTestServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TestParameterServlet</servlet-name>
        <servlet-class>com.icbt.testparameter.TestParameterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ParameterSumServlet</servlet-name>
        <servlet-class>com.icbt.testparameter.ParameterSumServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SendErrorServlet</servlet-name>
        <servlet-class>com.icbt.testparameter.SendErrorServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>reDirectServlet</servlet-name>
        <servlet-class>com.icbt.testparameter.reDirectServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ParameterTestServlet</servlet-name>
        <url-pattern>/ParameterTestServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TestParameterServlet</servlet-name>
        <url-pattern>/TestParameterServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ParameterSumServlet</servlet-name>
        <url-pattern>/ParameterSumServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SendErrorServlet</servlet-name>
        <url-pattern>/SendErrorServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>reDirectServlet</servlet-name>
        <url-pattern>/reDirectServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
